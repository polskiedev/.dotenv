{
	"task.allowAutomaticTasks": "off",
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"[php]": {
		"editor.cursorStyle": "line",
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnPaste": true,
		"editor.formatOnSave": true,
		// "editor.defaultFormatter": "obliviousharmony.vscode-php-codesniffer",
		"editor.bracketPairColorization.enabled": true,
		"files.trimTrailingWhitespace": true
	},
	"editor.insertSpaces": false,
	"diffEditor.ignoreTrimWhitespace": false,
	"files.exclude": {
		"**/.bak": true,
		"**/.tmp": true
	},
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#1f593d",
		"activityBar.background": "#1f593d",
		"activityBar.foreground": "#e7e7e7",
		"activityBar.inactiveForeground": "#e7e7e799",
		//////
		"activityBarBadge.background": "#20102f",
		"activityBarBadge.foreground": "#e7e7e7",
		//////
		"editor.lineHighlightBackground": "#3d3c3c",
		"editor.foreground": "#ffffff",
		/////
		"titleBar.activeBackground": "#123323",
		"titleBar.activeForeground": "#e7e7e7",
		"titleBar.inactiveBackground": "#12332399",
		"titleBar.inactiveForeground": "#e7e7e799",
		/////
		"statusBar.background": "#123323",
		"statusBar.foreground": "#e7e7e7",
		"statusBarItem.hoverBackground": "#1f593d",
		"statusBarItem.remoteBackground": "#123323",
		"statusBarItem.remoteForeground": "#e7e7e7",
		//////
		"commandCenter.border": "#e7e7e799",
		"sash.hoverBorder": "#1f593d"
	}
}

